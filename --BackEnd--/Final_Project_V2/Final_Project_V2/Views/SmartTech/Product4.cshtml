                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                                <span>22 Review(s)</span>
                            </div>
                            <p class="productprice">$1650.00</p>
                            <p class="oldprice">$2200.00</p>
                            <div class="buyproduct">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="product-4">
                            <div class="productimg">
                                <span class="new">NEW</span>
                                <img src="~/Public/images/item-img-1-6.jpg" alt="">
                            </div>
                            <p class="productcategory">Accessories</p>
                            <p class="productname">Bang & Olufsen Bluetooth Speakers</p>
                            <div class="stars">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                                <span>8 Review(s)</span>
                            </div>
                            <p class="productprice">$350.00</p>
                            <div class="buyproduct">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                        </div>
                    </div>*@

            </div>
            <!-- PAGINATION SECTION -->
            <div class="paginationwrapper">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <i class="fas fa-chevron-left fa-xs"></i>
                            </a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <i class="fas fa-chevron-right fa-xs"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- PRODUCTS END HERE -->
    </div>
</div>
