@{
    ViewBag.Title = "Delivery Methods - Smart Tech";
}

<!-- STEPS START HERE -->
<div class="steps">
    <div class="container">
        <!-- STEP 1 - SHOPPING CART -->
        <div class="col-md-3">
            <a href="@Url.Action("ShoppingCart")">
                <div class="svgcircle done">
                    <i class="fas fa-cart-arrow-down"></i>
                </div>
                <div class="steptext">
                    <p>Step 1</p>
                    <h4>Shopping Cart</h4>
                </div>
            </a>
        </div>
        <!-- STEP 2 - PAYMENT METHODS -->
        <div class="col-md-3">
            <a href="@Url.Action("PaymentMethods")">
                <div class="svgcircle done">
                    <i class="far fa-credit-card"></i>
                </div>
                <div class="steptext">
                    <p>Step 2</p>
                    <h4>Payment Methods</h4>
                </div>
            </a>
        </div>
        <!-- STEP 3 - DELIVERY METHODS -->
        <div class="col-md-3">
            <a href="@Url.Action("DeliveryMethods")">
                <div class="svgcircle active">
                    <i class="fas fa-shipping-fast"></i>
                </div>
                <div class="steptext">
                    <p>Step 3</p>
                    <h4>Delivery Methods</h4>
                </div>
            </a>
        </div>
        <!-- STEP 4 - CONFIRMATION -->
        <div class="col-md-3">
            <a href="@Url.Action("Confirmation")">
                <div class="svgcircle">
                    <i class="fas fa-check"></i>
                </div>
                <div class="steptext">
                    <p>Step 4</p>
                    <h4>Confirmation</h4>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="clear"></div>
<!-- STEPS END HERE -->
<!-- DELIVERY METHODS PAGE START HERE -->
<div class="paymentmethodspage">
    <div class="container">
        <div class="col-md-6 yourinformation">
            <h3>Your Information</h3>
            <hr>
            <div class="col-md-6">
                <label for="firstname">First Name</label>
                <input type="text" id="firstname">
            </div>
            <div class="col-md-6">
                <label for="lastname">Last Name</label>
                <input type="text" id="lastname">
            </div>
            <div class="col-md-7">
                <div class="col-md-6 country">
                    <label>Country</label>
                    <select>
                        <option value="AZ">Azerbaijan</option>
                        <option value="ITA">Italy</option>
                        <option value="RUS">Russia</option>
                        <option value="POL">Poland</option>
                        <option value="SPN">SPAIN</option>
                        <option value="USA">United States</option>
                        <option value="UK">United Kingdom</option>
                        <option value="BRZ">Brazil</option>
                        <option value="CAN">Canada</option>
                        <option value="GER">Germany</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label>City</label>
                    <select>
                        <option value="Baku">Baku</option>
                        <option value="Rome">Rome</option>
                        <option value="Moscow">Moscow</option>
                        <option value="Warsaw">Warsaw</option>
                        <option value="Madrid">Madrid</option>
                        <option value="Washington">Washington</option>
                        <option value="London">London</option>
                        <option value="Brasil">Brazil</option>
                        <option value="Ottawa">Ottawa</option>
                        <option value="Berlin">Berlin</option>
                    </select>
                </div>
            </div>
            <div class="col-md-5">
                <label for="state">State</label>
                <input type="text" id="state">
            </div>
            <div class="col-md-4">
                <label for="zipcode">Zip Code</label>
                <input type="text" id="zipcode">
            </div>
            <div class="col-md-8">
                <label for="address">Address</label>
                <input type="text" id="address">
            </div>
            <div class="col-md-6">
                <label for="phone">Phone</label>
                <input type="text" id="phone">
            </div>
            <div class="col-md-6">
                <label for="email">Email</label>
                <input type="text" id="email">
            </div>
        </div>
        <div class="col-md-6">
            <h3>Select Your Transportation</h3>
            <hr>
            <div class="col-md-6">
                <div class="transportation">
                    <div class="leftside">
                        <h5>Free Delivery</h5>
                        <span>7-12 days</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="transportation active">
                    <div class="leftside">
                        <h5>Fast Delivery</h5>
                        <span>4-7 days</span>
                    </div>
                    <div class="rightside pull-right">
                        <h4>+$25</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="transportation">
                    <div class="leftside">
                        <h5>Expert Delivery</h5>
                        <span>24-48 hours</span>
                    </div>
                    <div class="rightside pull-right">
                        <h4>+$75</h4>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
<!-- DELIVERY METHODS PAGE END HERE -->
<!-- PAGE CONTROLS START HERE -->
<div class="pagecontrol">
    <div>
        <a href="@Url.Action("PaymentMethods")" class="prevpage">Back to Payment</a>
        <a href="@Url.Action("Confirmation")" class="nextpage">Go to Confirmation</a>
    </div>
</div>
<!-- PAGE CONTROLS END HERE -->
