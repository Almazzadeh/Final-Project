}


<h3>Are you sure you want to hide this?</h3>
<div>
    <h4>Social Network</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Url)
        </dt>

        <dd>
            <a href="@Model.Url" target="_blank">@Model.Url</a>
