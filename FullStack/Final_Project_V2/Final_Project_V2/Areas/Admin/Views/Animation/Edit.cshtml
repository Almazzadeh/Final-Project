@model Final_Project_V2.Models.Animation

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>Edit</h2>
<form method="post" enctype="multipart/form-data">    
    <div class="form-horizontal">
        <h4>Animation</h4>
        @if(ViewBag.EditError != null)
         {
            <div class="alert alert-danger" role="alert">@ViewBag.EditError</div>
         }
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @*IMAGE*@
        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                <input type="file" name="Image" class="form-control" />
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <img src="~/Public/images/@Model.Image" />
            </div>
        </div>

        @*TOP TEXT*@
        <div class="form-group">
            @Html.LabelFor(model => model.Top_Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Top_Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Top_Text, "", new { @class = "text-danger" })
            </div>
        </div>

        @*MIDDLE TEXT*@
        <div class="form-group">
            @Html.LabelFor(model => model.Middle_Text, htmlAttributes: new { @class = "control-label col-md-2" })
