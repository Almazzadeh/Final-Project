@model IEnumerable<Final_Project_V2.Models.Animation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>Animation</h2>

<table class="table">
    <tr>
        <th class="sticky">
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th class="sticky">
            Top Text
        </th>
        <th class="sticky">
            Middle Text
        </th>
        <th class="sticky">
            Bottom Text
        </th>
        <th class="sticky">
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th class="sticky"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Public/images/@item.Image" alt="Picture not found"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Top_Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Middle_Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bottom_Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) <br />
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
