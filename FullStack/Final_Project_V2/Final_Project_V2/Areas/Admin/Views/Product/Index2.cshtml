@model IEnumerable<Final_Project_V2.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>Index</h2>
<p class="btn btn-info">
    @Html.ActionLink("Create", "Create")
</p>
<hr />

@*PRODUCTS START HERE*@

<div class="d-flex">
    @foreach (var item in Model)
    {
        <div class="square">
           <img src="~/Public/images/@item.Image" alt="Picture not found" />
            <div class="layout"></div>
            <div class="buttons">
                <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.Id })"><i class="fas fa-pencil-alt"></i></a><br />
                <a class="btn btn-primary" href="@Url.Action("Details", new { id = item.Id })"><i class="fas fa-info"></i></a><br />

            @if(item.Status == true)
            {
                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })"><i class="far fa-trash-alt"></i></a><br />
            }
            else
            {
                <a class="btn btn-success" href="@Url.Action("Show", new { id = item.Id })"><i class="fas fa-recycle"></i></a><br />
            }
            </div>
        </div>
    }
</div>
