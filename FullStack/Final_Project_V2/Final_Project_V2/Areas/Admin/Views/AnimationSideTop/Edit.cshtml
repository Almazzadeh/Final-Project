@model Final_Project_V2.Models.AnimationSideTop

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>Edit</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Animation Top Side</h4>
        @if(ViewBag.EditError != null)
         {
            <div class="alert alert-danger" role="alert">@ViewBag.EditError</div>
         }
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @*IMAGE*@
        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                <input type="file" name="Image" class="form-control" />
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <img src="~/Public/images/@Model.Image" alt="Picture not found"/>
            </div>
        </div>

        @*TOP TEXT*@
        <div class="form-group">
            @Html.LabelFor(model => model.TopText, "Top Text", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TopText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TopText, "", new { @class = "text-danger" })
            </div>
        </div>

        @*MIDDLE TEXT*@
        <div class="form-group">
            @Html.LabelFor(model => model.MiddleText, "Middle Text", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MiddleText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MiddleText, "", new { @class = "text-danger" })
            </div>
        </div>

        @*PRICE*@
        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to Details", "Details/1")
</div>
