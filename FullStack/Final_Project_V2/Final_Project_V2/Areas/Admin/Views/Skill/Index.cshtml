@model IEnumerable<Final_Project_V2.Models.Skill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<p class="btn btn-info">
    @Html.ActionLink("Create", "Create")
</p>
<table class="table">
    <tr>
        <th class="sticky">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="sticky">
            Percentage
        </th>
        <th class="sticky">
            Short Name
        </th>
        <th class="sticky"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Div_Id_Name)
        </td>
        <td>
             @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-warning" })
            @if(item.Status == true)
            {
                @Html.ActionLink("Hide", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" });
            }
            else
            {
                @Html.ActionLink("Show", "Show", new { id = item.Id }, new { @class = "btn btn-success" });
            }
        </td>
    </tr>
}

</table>
