                @Html.EditorFor(model => model.TopText_1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TopText_1, "", new { @class = "text-danger" })
            </div>
        </div>

        @*TOP TEXT 2ND PART*@
        <div class="form-group">
            @Html.LabelFor(model => model.TopText_2, "Top Text 2nd Part", htmlAttributes: new { @class = "control-label col-md-2" })
