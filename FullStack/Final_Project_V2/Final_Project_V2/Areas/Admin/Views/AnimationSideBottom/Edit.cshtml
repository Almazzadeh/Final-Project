                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <img src="~/Public/images/@Model.Image" alt="Picture not fouond" />
            </div>
        </div>

        @*TOP TEXT 1ST PART*@
        <div class="form-group">
            @Html.LabelFor(model => model.TopText_1, "Top Text 1st Part", htmlAttributes: new { @class = "control-label col-md-2" })
